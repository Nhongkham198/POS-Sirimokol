rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // ======================================================================
      // DEVELOPER NOTE:
      // You are seeing "Missing or insufficient permissions" because the
      // default Firestore rules are too strict. This new rule will open
      // access for development purposes.
      //
      // *** YOU MUST DEPLOY THIS FILE TO FIREBASE FOR THE FIX TO WORK. ***
      //
      // This rule allows anyone to read/write to your database until the end of 2030.
      // For production, you must configure proper security rules.
      // ======================================================================
      allow read, write: if request.time < timestamp.date(2030, 12, 31);
    }
  }
}